<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:background="@color/colorWhite">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/etIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@string/from_red_solidaria_team"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_size_medium"
            android:justificationMode="inter_word"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/etWrite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edit_text_email"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@drawable/bg_border_line_grey"
            android:gravity="start"
            android:hint="@string/write"
            app:layout_constraintTop_toBottomOf="@+id/etIntro"/>
        <Button
            android:id="@+id/btSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/bg_color_primary"
            android:width="@dimen/button_default_width"
            android:text="@string/send"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/etWrite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
