<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:background="@color/colorWhite"
              android:paddingBottom="57dp"
            >

    <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingHorizontal="20dp">

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:paddingVertical="20dp"

                    android:textColor="@color/colorBlack"
                    android:text="@string/count_attention_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <TextView
                    style="@style/TextBodyBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/name_2"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_border_line_grey">

                <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"

                />

            </FrameLayout>


            <TextView
                    style="@style/TextBodyBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/lastName_2"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_border_line_grey">

                <EditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"

                />

            </FrameLayout>


            <TextView
                    style="@style/TextBodyBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/dni"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_border_line_grey">

                <EditText
                        android:id="@+id/etDNI"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"

                />

            </FrameLayout>

            <LinearLayout
                    android:paddingTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        style="@style/TextBodyBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="@string/origin_county"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                <Spinner

                        android:id="@+id/spCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:entries="@array/countries"
                        android:prompt="@string/random_prompt"></Spinner>

            </LinearLayout>


            <LinearLayout

                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">


                    <TextView
                            style="@style/TextBodyBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/sex"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    <RadioGroup
                            android:id="@+id/rgSex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:orientation="horizontal">

                        <RadioButton
                                android:id="@+id/rbM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:checked="true"
                                android:text="Masculino"/>

                        <RadioButton
                                android:id="@+id/rbF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="Femenino"/>
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    <TextView
                            style="@style/TextBodyBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="@string/age"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_border_line_grey">

                        <EditText
                                android:inputType="number"
                                android:id="@+id/etAge"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"

                        />

                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>

            <TextView
                    style="@style/TextBodyBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/phone"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_border_line_grey">

                <EditText
                        android:id="@+id/etPhone"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"

                />

            </FrameLayout>

            <TextView
                    style="@style/TextBodyBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/email"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_border_line_grey">

                <EditText
                        android:id="@+id/etEmail"

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"

                />

            </FrameLayout>

            <TextView
                    style="@style/TextBodyBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/aditional_info"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"/>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_border_line_grey">

                <EditText
                        android:gravity="top"
                        android:paddingHorizontal="5dp"
                        android:id="@+id/etAditional"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"

                />

            </FrameLayout>

            <TextView
                    style="@style/TextBodyBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@string/required_fields"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                <Button

                        android:id="@+id/btSend"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_color_primary"

                        android:text="@string/register_count"
                        android:textColor="@color/colorWhite" />

                <Button
                        android:id="@+id/btCancel"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_border_line_primary"
                        android:text="@string/cancel"
                        android:textColor="@color/colorPrimary" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>