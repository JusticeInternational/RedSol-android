<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/colorBlack"
        android:text="@string/we_are_volunteer"/>


    <ImageView
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="200dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/img_volunteer"/>


    <TextView
        android:layout_marginBottom="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"

        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:text="@string/we_are_volunteer_desc"/>







</RelativeLayout>