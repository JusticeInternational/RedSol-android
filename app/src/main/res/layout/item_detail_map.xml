<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/cardBorder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/spacing_extra_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_extra_small"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgService"
                    android:layout_width="@dimen/height_icon_marker_info"
                    android:layout_height="@dimen/height_icon_marker_info"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/spacing_extra_small"
                    app:srcCompat="@drawable/ic_food"/>

                <TextView
                    android:id="@+id/tvServicesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Almuerzo"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/font_size_medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvOrganizationName"
                style="@style/TextBodyBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_extra_small"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Santa Clara Valley Medical Center"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSeeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/see_details"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>