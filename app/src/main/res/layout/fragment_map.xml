<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.cleteci.redsolidaria.ui.fragments.basicsearch.BasicSearchFragment">

    <!-- TODO: Update blank fragment layout -->


    <com.google.android.gms.maps.MapView
        android:id="@+id/map"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp" />


    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
android:minHeight="70dp"

        app:behavior_hideable="false"
        app:behavior_peekHeight="100dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <RelativeLayout
            android:id="@+id/headerB"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_grey_rectangle_round_corner" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/near_services"
            android:textAlignment="center"
            android:textColor="@color/colorBlack" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rvResourses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp"
            android:background="@color/colorWhite"
            android:layout_marginBottom="57dp"/>


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/advancedContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
