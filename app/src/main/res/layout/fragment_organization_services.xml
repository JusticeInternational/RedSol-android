<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.organization.ServicesFragment">
        <TextView
            android:id="@+id/etTitle"
            style="@style/TitleDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/categories_of_services" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_small"
                app:srcCompat="@drawable/ic_cross"/>
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_small"
                android:layout_toEndOf="@+id/icon1"
                app:srcCompat="@drawable/ic_test"/>
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_small"
                android:layout_toEndOf="@+id/icon2"
                app:srcCompat="@drawable/ic_vaccine"/>
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_small"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_arrow_right_circle"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <TextView
            android:id="@+id/etDescTitle"
            style="@style/TitleDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/desc_our_services" />
        <TextView
            android:id="@+id/etDesc"
            style="@style/BodyDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut varius justo at dui dictum tristique. Sed eget ante porta, congue lectus ac, placerat sapien. Proin laoreet sagittis nisl eget pulvinar."/>
        <Button
            android:id="@+id/sendNotificationInterested"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small"
            android:paddingStart="@dimen/activity_vertical_margin_big"
            android:paddingEnd="@dimen/activity_vertical_margin_big"
            android:text="@string/interested_on_services"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_primary_button"
            app:drawableEndCompat="@drawable/ic_interested_white"  />
        <TextView
            android:id="@+id/etServicesDetails"
            style="@style/TitleDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_big"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/services_details" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <TextView
            android:id="@+id/etHealth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_info_item"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="@string/health"
            android:drawablePadding="@dimen/spacing_medium"
            app:drawableStartCompat="@drawable/ic_cross"
            app:drawableEndCompat="@drawable/ic_interested" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <TextView
            android:id="@+id/etTest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_info_item"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="@string/tests_covid_19"
            android:drawablePadding="@dimen/spacing_medium"
            app:drawableStartCompat="@drawable/ic_test"
            app:drawableEndCompat="@drawable/ic_interested" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
        <TextView
            android:id="@+id/etVaccine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_info_item"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:text="@string/vaccines_covid_19"
            android:drawablePadding="@dimen/spacing_medium"
            app:drawableStartCompat="@drawable/ic_vaccine"
            app:drawableEndCompat="@drawable/ic_interested_green" />
        <Button
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:padding="@dimen/button_padding"
            android:text="@string/my_services"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_primary_button"/>
    </LinearLayout>
</ScrollView>
